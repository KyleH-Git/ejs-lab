<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
</head>
<body>
    <%- include('./partials/nav') %>
        <h2>Mains</h2>
        <% menu.forEach(item => { %>
            <% if (item.category === "mains") { %>
                <p>Name: <%= item.name %></p>
                <p>Price: <%= item.price %></p>
                <p>Rating: <%= item.rating %></p>
                <p>Details: <%= item.details %></p>
            <% } %>
        <% }) %>
        <h2>Desserts</h2>
        <% menu.forEach(item => { %>
            <% if (item.category === "desserts") { %>
                <p>Name: <%= item.name %></p>
                <p>Price: <%= item.price %></p>
                <p>Rating: <%= item.rating %></p>
                <p>Details: <%= item.details %></p>
            <% } %>
        <% }) %>
        <h2>Sides</h2>
        <% menu.forEach(item => { %>
            <% if (item.category === "sides") { %>
                <p>Name: <%= item.name %></p>
                <p>Price: <%= item.price %></p>
                <p>Rating: <%= item.rating %></p>
                <p>Details: <%= item.details %></p>
            <% } %>
        <% }) %>
</body>
</html>
